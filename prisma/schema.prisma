datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  balance   Float    @default(10.0) // 10 tokens by default
  comments  Comment[]
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  image       String
  owner       String
  comments    Comment[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  projectId  Int
  project    Project  @relation(fields: [projectId], references: [id])
  wallet     String
  weight     Float    @default(1.0)
  premium    Boolean  @default(false)
  createdAt  DateTime @default(now())
}
