datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  image       String
  comments    Comment[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  projectId  Int
  project    Project  @relation(fields: [projectId], references: [id])
  createdAt  DateTime @default(now())
}
